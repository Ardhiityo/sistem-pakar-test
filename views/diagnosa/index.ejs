<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="diagnosa/app.css" />
    <title>Diagnosa</title>
  </head>
  <body>
    <div class="container my-5 rounded-2">
     
      <table class="table p-5">
      <h2 class="pt-4 fw-bold">Hasil Diagnosa</h2>
      
      <% if (results[0].point.length !== 0) { %>
        <h4 class="text-danger fw-bold">Positif</span> <%= results.length %> Penyakit/Hama</h4>
      <% } %>
      
      <% if (results[0].point.length === 0) { %>
       <h4 class="text-success fw-bold">Negative Penyakit/Hama</h4>
      <% } %>
    
          
        
      <% for( const result of results ) { %>
        <table class="table table-bordered table-striped">
            <tr>
              <th>Penyakit/Hama</th>
              <td><%= result.name %></td>
            </tr>
            <tr>
              <th>Gejala</th>
              <td><%= result.gejala %></td>
            </tr>
            <tr>
              <th>Solusi</th>
              <td><%= result.solusi %></td>
            </tr>
          </table>
          <% } %>
        </table>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
